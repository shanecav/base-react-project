  "scripts": {
    "setup:dev": "yarn install && npm run build:dll:dev",
    "start": "webpack-dashboard -- node ./tools/build/static-server.js",
    "clean": "rimraf dist && rimraf dev && rimraf .happypack && rimraf dll",
    "build:dll:dev": "webpack --config ./tools/build/webpack.dll.dev.js",
    "build:dll:prod": "cross-env NODE_ENV=production webpack --config ./tools/build/webpack.dll.prod.js",
    "build:app:prod": "cross-env NODE_ENV=production webpack --config ./tools/build/webpack.config.prod.js",
    "build": "yarn install && npm run build:dll:prod && npm run build:app:prod",
    "build:local": "npm run clean && npm run build:dll:prod && npm run build:app:prod",
    "test": "jest --notify",
    "test:watch": "jest --notify --watch"
  },
  "dependencies": {
